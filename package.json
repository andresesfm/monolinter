{
  "name": "monolinter",
  "version": "1.0.1",
  "description": "Collection of utilities to lint files accross mono repos",
  "main": "dist/index.js",
  "bin": {
    "monolinter": "./bin/index"
  },
  "files": [
    "dist/**/*",
    "bin/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andresesfm/monolinter.git"
  },
  "keywords": [
    "monorepo",
    "lint",
    "package.json"
  ],
  "author": "Andres Aguilar",
  "license": "ISC",
  "dependencies": {
    "@types/glob": "^7.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "cosmiconfig": "^7.0.0",
    "eslint": "^7.31.0",
    "globby": "^11.0.4",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.3",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.4"
  }
}
